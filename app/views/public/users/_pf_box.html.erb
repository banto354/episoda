<div class="container my-5 shadow-sm rounded">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <%= link_to user_path(user) do %>
        <%= image_tag user.get_profile_image(100, 100), class: 'rounded-circle img-fluid img-thumbnail my-3' %><br>
      <% end %>
    </div>
  </div>
  <div class="row align-items-center">
    <div class="col">
      <%= link_to user_path(user), class:" text-body font-weight-bold" do %>
        <%= user.name %>
      <% end %>
    </div>
  </div>
  <div class="row align-items-center">
    <div class="col text-muted">
      @<%= user.username %>
    </div>
  </div>
  <div class="row align-items-center mt-2">
    <div class="col">
      <small><%= simple_format(user.introduction) %></small>
    </div>
  </div>
  <div class="row d-md-flex flex-md-column">
    <div class="ml-3 mt-2">
      <div id="following-count-<%= user.id %>">
        <%= render 'public/relationships/following_count', user: user %>
      </div>
    </div>
    <div class="ml-3 mt-2">
      <div id="followers-count-<%= user.id %>">
        <%= render 'public/relationships/followers_count', user: user %>
      </div>
    </div>
  </div>
  <!--ログインユーザーの確認、表示ボタンの変更-->
  <%= render 'public/relationships/btn_option', user: user %>
</div>