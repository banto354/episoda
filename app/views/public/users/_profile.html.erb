<div class="container my-5 shadow-sm rounded">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <%= image_tag user.get_profile_image(100, 100), class: 'rounded-circle img-fluid img-thumbnail my-3' %><br>
    </div>
  </div>
  <div class="row align-items-center">
    <div class="col font-weight-bold">
      <%= user.name %>
    </div>
  </div>
  <div class="row align-items-center">
    <div class="col text-muted">
      @<%= user.username %>
    </div>
  </div>
  <div class="row align-items-center mt-2">
    <div class="col">
      <small><%= simple_format(user.introduction) %></small>
    </div>
  </div>
  <div class="row d-md-flex flex-md-column mt-2">
    <span class="ml-3">
      <%= link_to user_following_path(user.id), class: "text-body" do %>
        <a class="font-weight-bold text-body"><%= user.following.count %></a> フォロー
      <% end %>
    </span>
    <span class="ml-3">
      <%= link_to user_followers_path(user.id), class: "text-body" do %>
        <a class="font-weight-bold text-body"><%= user.followers.count %></a> フォロワー
      <% end %>
    </span>
  </div>
  <!--ログインユーザーの確認、表示ボタンの変更-->
  <% if user.id != current_user.id %>
  <div class="d-flex justify-content-center">
    <div class="follow-btn my-3" id="follow-btn-<%= user.id %>">
      <%= render "/public/relationships/follow_btn", user: user %>
    </div>
  </div>
  <% else %>
    <% unless user.guest_user?%>
      <div class="row align-items-center">
        <div class="col">
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block my-3" do %>
              ユーザー情報編集
              <i class="fa-solid fa-gear"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>