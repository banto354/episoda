<div class="container">
  <h4>
      <%= user.name %>さんの投稿一覧
  </h4>
    <div>
      <% posts.each do |post| %>
        <div class="container my-3 shadow-sm rounded">
          <div class="row">
            <div class="col-2">
              <%= image_tag user.get_item_image(150, 150), class: 'rounded-circle img-fluid' %>
            </div>
            <div class="col-9">
              <%= link_to user.name, user_path(post.user), class: "underline" %><br>
              <!--<%#= link_to post.category.name, category_path(post.category) %>-->
              <%= link_to post.title, post_path(post) %>
            </div>
            <div class="col-1">
              <%= link_to edit_post_path do %>
                <i class="fa-solid fa-file-pen"></i>
              <% end %>
            </div>
          </div>
        </div>
        <div class="row">

        </div>
      <% end %>
    </div>
  <div class="pagination d-flex justify-content-center mb-4">
    <%#= paginate @orders %>
  </div>
</div>
