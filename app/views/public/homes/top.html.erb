<div class="container">
  <div class="row">
    <!--サイト説明-->
    <div class="col-6 d-flex align-items-center">
      <div class="container">
        <div class="row">
          <div class="col">
            <p>知らないエピソードが溢れるSNS</p>
          </div>
        </div>
      </div>
    </div>
    <!--ログイン機能コンテナ-->
    <div class="col-6">
      <div class="container mt-5">
        <div class="row justify-content-center">
          <h5>ログイン</h5>
        </div>
        <!--ゲストユーザーログインボタン-->
        <%= render "/public/sessions/form" %>
        <div class="row">
          <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
        </div>
        
        <div class="row justify-content-center pb-5">
          <div class="col-12 text-center ">
            <%= link_to "はじめてのはこちら", new_registration_path(:user) %>
          </div>
        </div>
        <div class="row text-center">
          <%#= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
