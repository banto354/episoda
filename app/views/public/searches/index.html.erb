<div class="container col-10">
  <h1 class="row">"<%= @query %>"の検索結果</h1>
  <% if @users.present? %>
    <div class="row">
      <h2 class="mt-5">ユーザー</h2>
    </div>

    <div class="d-flex flex-wrap ">
      <% @users.each do |user| %>
        <%= render "public/episodes/pf_box", user: user %>
      <% end %>
      <%= paginate @users %>
    </div>
  <% end %>
  <% if @episodes.present? %>
    <h2 class="mt-5">エピソード</h2>
    <div class="d-flex flex-row flex-wrap">
      <% @episodes.each do |episode| %>
        <%= render "public/episodes/ep_box", episode: episode, user: episode.user %>
      <% end %>
    </div>
    <%= paginate @episodes %>
  <% end %>

</div>