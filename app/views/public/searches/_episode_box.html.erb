<div class="col-4 shadow-sm rounded my-3 d-inline-block ">
  <div class="container">
    <!--エピソード概要上段-->
    <div class="row my-1">
      <div class="col-3">
        <%= image_tag user.get_profile_image(150, 150), class: 'rounded-circle img-fluid' %>
      </div>
      <div class="col-9">
        <%= link_to user.name, user_path(episode.user), class: "underline" %><br>
        <p>@<%= user.username %></p>
        <!--<%#= link_to episode.category.name, category_path(episode.category) %>-->
        <%= link_to episode.title, episode_path(episode) %>
      </div>
    </div>
    <hr>
    <!--中段-->
    <div class="row">
      <div class="col text-truncate">
        <%= episode.content %>
      </div>
    </div>
    <!--下段-->
    <div class="row">
      <div class="col">
        <div class="favourite-btn" id="favourite-btn-<%= episode.id %>">
          <%= render 'public/favourites/favourite-btn', episode: episode %>
        </div>       
      </div>
    </div>
  </div>
</div>