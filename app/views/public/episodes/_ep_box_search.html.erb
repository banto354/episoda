<div class="col-sm-3 shadow-sm rounded my-3 d-inline-block ">
  <!--エピソード概要上段-->
  <div class="row mt-2 mx-1">
    <div class="col-4 d-flex align-items-center justify-content-center px-0">
      <%= link_to user_path(episode.user) do %>
        <%= image_tag user.get_profile_image(150, 150), class: 'rounded-circle img-fulid img-thumbnail my-2' %>
      <% end %>
    </div>
    <div class="col-8 d-flex flex-column">
      <%= link_to user.name, user_path(episode.user), class: "underline text-body" %>
      <p class="text-muted">@<%= link_to user.username, user_path(episode.user), class: "text-muted" %></p>
    </div>
  </div>
  <!--中段-->
  <hr>
  <div class="row mx-2">
    <div class="col text-truncate">
      <!--<%#= link_to episode.category.name, category_path(episode.category) %>-->
      <%= link_to episode.title, episode_path(episode), class:"text-body font-weight-bold" %>
    </div>
  </div>
  <div class="row mx-2">
    <div class="episode_content col">
      <small><%= episode.content %></small>
    </div>
  </div>
  <!--下段-->
  <div class="row mx-2 mb-2">
    <div class="col">
      <div class="favourite-btn my-3" id="favourite-btn-<%= episode.id %>">
        <%= render 'public/favourites/favourite-btn', episode: episode %>
      </div>
    </div>
    <div class="col d-flex align-items-center justify-content-end">
      <small class="text-muted"><%= episode.created_at.strftime("%Y/%m/%d")  %></small>
    </div>
  </div>
</div>