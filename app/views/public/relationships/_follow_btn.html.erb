<% if user.followed_by?(current_user) %>
    <%= link_to "フォロー中", user_relationships_path(user.id), class: "btn btn-sm btn-success", remote: true, method: :delete %>
<% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-sm btn-outline-primary", remote: true, method: :post %>
<% end %>