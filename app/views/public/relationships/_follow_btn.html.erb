<% if user.followed_by?(current_user) %>
    <%= link_to "unfollow", user_relationships_path(user.id), class: "btn btn-block btn-success", remote: true, method: :delete %>
<% else %>
    <%= link_to "Follow", user_relationships_path(user.id), class: "btn btn-block btn-primary", remote: true, method: :post %>
<% end %>