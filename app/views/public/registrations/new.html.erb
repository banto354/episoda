<div class="container d-flex flex-column justify-content-center align-items-center">
  <div class="row">
    <h1>新規登録</h1>
  </div>
  <%= render "public/shared/error_messages", resource: resource %>
  <%= form_with model: @user, url: user_registration_path, class: "row col-12" do |f| %>
    <div class="col">
      <div class="container d-flex flex-column justify-content-center">
        <div class=" form-group row mb-3 row mb-3">
          <%= f.label :name, "名前", class: "form-label col-6"  %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "タロウ", class: "col-4 form-control" %>
        </div>

        <div class=" form-group row mb-3">
          <%= f.label :username, "ユーザー名", class: "form-label col-6" %>
          <%= f.text_field :username, placeholder: "半角英数字（ex. taro123）", class: "col-4 form-control" %>
        </div>

        <div class=" form-group row mb-3">
          <div class="input-group date" id="datepicker">
            <%= f.text_field :birthdate, class: "form-control" %>
            <div class="input-group-append">
              <span class="input-group-text"><i class="bi bi-calendar"></i></span>
            </div>
          </div>
        </div>

        <div class=" form-group row mb-3">
          <%= f.label :email, class: "form-label col-6" %>
          <%= f.email_field :email, autofocus: true, placeholder: "email", class: "col-4 form-control" %>
        </div>

        <div class=" form-group row mb-3">
          <%= f.label :password, class: "form-label col-6" %>
          <%= f.password_field :password, placeholder: "（#{@minimum_password_length} 文字以上）", class: "col-4 form-control" %>
        </div>

        <div class=" form-group row mb-3">
          <%= f.label :password_confirmation, class: "form-label col-6" %>
          <%= f.password_field :password_confirmation, placeholder: "パスワードをもう一度入力", class: "col-4 form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "public/shared/links" %>
</div>
