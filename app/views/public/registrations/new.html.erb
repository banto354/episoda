<div class="container d-flex flex-column justify-content-center align-items-center">
  <div class="row">
    <h1 class="h4">新規登録</h1>
  </div>
  <%= render "public/shared/error_messages", resource: resource %>
  <%= form_with model: @user, url: user_registration_path, class: "row col-lg-8 mt-4" do |f| %>
    <div class="col d-flex flex-column justify-content-between">
      <div class=" form-group d-lg-flex justify-content-between row mt-2 mb-3">
        <%= f.label :name, "名前", class: "form-label col-lg-4 pl-0" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "タロウ", class: "col-lg-6 form-control float-right" %>
      </div>

      <div class=" form-group row d-lg-flex justify-content-between mt-2 mb-3">
        <%= f.label :username, "ユーザー名", class: "form-label col-lg-4 pl-0" %>
        <%= f.text_field :username, placeholder: "半角英数字（ex. taro123）", class: "col-lg-6 form-control" %>
      </div>

      <div class=" form-group row d-lg-flex justify-content-between mt-2 mb-3">
        <%= f.label :birthdate, "生年月日", class: "form-label col-lg-4 pl-0" %>
        <%= f.date_field :birthdate, use_month_numbers: true, placeholder: "yyyy/mm/dd", class: "col-lg-6 form-control" %>
      </div>

      <div class=" form-group row d-lg-flex justify-content-between mt-2 mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label col-lg-4 pl-0" %>
        <%= f.email_field :email, autofocus: true, placeholder: "email", class: "col-lg-6 form-control" %>
      </div>

      <div class=" form-group row d-lg-flex justify-content-between mt-2 mb-3">
        <%= f.label :password, class: "form-label col-lg-4 pl-0" %>
        <%= f.password_field :password, placeholder: "（#{@minimum_password_length} 文字以上）", class: "col-lg-6 form-control" %>
      </div>

      <div class=" form-group row d-lg-flex justify-content-between mt-2 mb-3">
        <%= f.label :password_confirmation, class: "form-label col-lg-4 pl-0" %>
        <%= f.password_field :password_confirmation, placeholder: "パスワードをもう一度入力", class: "col-lg-6 form-control" %>
      </div>

      <div class="form-group row d-lg-flex justify-content-center mt-3">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>

    </div>
  <% end %>

  <%= render "public/shared/links" %>
</div>
