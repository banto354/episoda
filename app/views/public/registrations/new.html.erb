<%= javascript_pack_tag 'hoge' %>
<div class="container d-flex flex-column justify-content-center align-items-center">
  <div class="row">
    <h1>新規登録</h1>
  </div>
  <%= render "public/shared/error_messages", resource: resource %>
  <%= form_with model: @user, url: user_registration_path, class: "row col-md-8" do |f| %>
    <div class="col">
      <div class="container d-flex flex-column justify-content-between">
        <div class=" form-group d-md-flex justify-content-between row mb-3">
          <%= f.label :name, "名前", class: "form-label col-md-4"  %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "タロウ", class: "col-md-5 form-control float-right" %>
        </div>

        <div class=" form-group row d-md-flex justify-content-between mb-3">
          <%= f.label :username, "ユーザー名", class: "form-label col-md-4" %>
          <%= f.text_field :username, placeholder: "半角英数字（ex. taro123）", class: "col-md-5 form-control" %>
        </div>

        <div class=" form-group row mb-3">
          <div class='input-group date' id='datetimepicker' data-target-input='nearest'>
            <div class='input-group-append' data-target='#datetimepicker' data-toggle='datetimepicker'>
              <input type='text' id='scenario_delivery_attributes_custom_delivering_at' class='form-control datetimepicker-input' data-target='#datetimepicker' name='hoge' />
            </div>
          </div>
        </div>

        <div class=" form-group row d-md-flex justify-content-between mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label col-md-4" %>
          <%= f.email_field :email, autofocus: true, placeholder: "email", class: "col-md-5 form-control" %>
        </div>

        <div class=" form-group row d-md-flex justify-content-between mb-3">
          <%= f.label :password, class: "form-label col-md-4" %>
          <%= f.password_field :password, placeholder: "（#{@minimum_password_length} 文字以上）", class: "col-md-5 form-control" %>
        </div>

        <div class=" form-group row d-md-flex justify-content-between mb-3">
          <%= f.label :password_confirmation, class: "form-label col-md-4" %>
          <%= f.password_field :password_confirmation, placeholder: "パスワードをもう一度入力", class: "col-md-5 form-control" %>
        </div>

        <div class="form-group row d-md-flex justify-content-center">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "public/shared/links" %>
</div>
