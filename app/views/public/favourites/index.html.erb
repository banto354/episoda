<div class="container col-11">
  <h1 class="h4">お気に入りリスト</h1>
  <!--エピソードの表示-->
  <% if @episodes.exists? %>
    <div class="d-flex flex-row flex-wrap" id="favourite-episode">
      <%= render 'public/searches/episode', episodes: @episodes %>
    </div>
    <!--検索結果数に応じて"もっとみる"を表示-->
    <div class="row justify-content-center">
      <% unless @episodes.last_page? %>
        <%= link_to_next_page @episodes, 'もっとみる', remote: true, 
        class: 'text-body stretched-link col-4 col-lg-2 text-center border rounded-pill p-2', id: 'another-favourite' %>
      <% end %>
    </div>
  <% end %>

  <!--検索結果なし-->
  <% if @episodes.empty? %>
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
      <p class="h4">該当するものはありませんでした。</p>
    </div>
  <% end %>
</div>