<div class="container my-4 px-sm-1">
  <div class="px-2 ml-md-5">
    <h5 class="bg-light text-center ml-3 mb-4" style="width: 300px;"><%= @user.name %>さんのユーザー情報編集</h5>
  </div>
  <div class="col-12 px-sm-0 px-md-1 mt-3">
    <%= render 'layouts/error_messages', resource: @user %>
      <%= form_with model: @user, url: admin_user_path do |f| %>
      <form>
        <div class="form-group row ml-3 mb-2">
          <label class="col-md-3 col-form-label">ユーザーID</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-md-4 d-flex align-items-center">
              <%= content_tag :div, @user.id %>
            </div>
          </div>
        </div>

        <div class="form-group row ml-3 mb-2">
          <label class="col-md-3 col-form-label">名前</label>
          <div class="col-md-9 form-row">
            <div class="col-md-4 mr-md-5">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group row ml-3 mb-2">
          <label class="col-md-3 col-form-label">ユーザーネーム</label>
          <div class="col-md-9 form-row">
            <div class="col-md-4 mr-md-5">
              <%= f.text_field :username, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group row ml-3 mb-2">
          <label class="col-md-3 col-form-label">プロフィール</label>
          <div class="col-md-9 form-row">
            <div class="col-md-4">
              <%= f.text_field :introduction, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group row ml-3 mb-2">
          <label class="col-md-3 col-form-label">生年月日</label>
          <div class="col-md-9 form-row">
            <div class="col-md-9">
              <%= f.date_select :birthdate, use_month_numbers: true %>
            </div>
          </div>
        </div>

        <div class="form-group row ml-3 mb-2">
          <label class="col-md-3 col-form-label">メールアドレス</label>
          <div class="col-md-9 form-row">
            <div class="col-md-6">
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group row ml-3 mb-2">
          <label class="col-md-3 col-form-label">公開ステータス</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-5  d-flex align-items-center">
              <%= f.radio_button :is_public, true %>
              <%= f.label :is_public, "公開", value: true, class: "my-0 mr-3" %>
              <%= f.radio_button :is_public, false %>
              <%= f.label :is_public, "非公開", value: false, class: "m-0" %>
            </div>
          </div>
        </div>

        <div class="form-group row ml-3 mb-2">
          <label class="col-md-3 col-form-label">アクティブステータス</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-5  d-flex align-items-center">
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "有効", value: true, class: "my-0 mr-3" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "退会", value: false, class: "m-0" %>
            </div>
          </div>
        </div>

        <div class="form-group row ml-3">
          <label class="col-md-3 col-form-label"></label>
          <div class="col-md-9 form-row">
            <div class="col-5">
              <%= f.submit "変更を保存", class: "btn btn-success px-4" %>
            </div>
          </div>
        </div>

      </form>
    <% end %>
  </div>
</div>