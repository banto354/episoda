<div class="container">
  <div class="px-2 ml-md-5">
    <h1 class="h4 text-center"><%= @user.name %>さんのユーザー情報編集</h1>
  </div>
  <div class="col-11 mx-auto">
    <%= render 'layouts/error_messages', resource: @user %>
      <%= form_with model: @user, url: admin_user_path do |f| %>

        <div class="form-group row ml-3 my-4">
          <label class="col-md-3 col-form-label font-weight-bold pl-0">ユーザーID</label>
          <div class="col-md-9 form-row align-items-center">
              <%= @user.id %>
          </div>
        </div>

        <div class="form-group row ml-3 my-4">
          <label class="col-md-3 col-form-label font-weight-bold pl-0">名前</label>
          <div class="col-md-9 form-row">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row ml-3 my-4">
          <label class="col-md-3 col-form-label font-weight-bold pl-0">ユーザーネーム</label>
          <div class="col-md-9 form-row">
            <%= f.text_field :username, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row ml-3 my-4">
          <label class="col-md-3 col-form-label font-weight-bold pl-0">プロフィール</label>
          <div class="col-md-9 form-row">
            <%= f.text_area :introduction, rows: 6, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row ml-3 my-4">
          <label class="col-md-3 col-form-label font-weight-bold pl-0">生年月日</label>
          <div class="col-md-9 form-row">
            <%= f.date_field :birthdate, use_month_numbers: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row ml-3 my-4">
          <label class="col-md-3 col-form-label font-weight-bold pl-0">メールアドレス</label>
          <div class="col-md-9 form-row">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row ml-3 my-4">
          <label class="col-md-3 col-form-label font-weight-bold pl-0">公開ステータス</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-5  d-flex align-items-center">
              <%= f.radio_button :is_public, true %>
              <%= f.label :is_public, "公開", value: true, class: "my-0 mr-3" %>
              <%= f.radio_button :is_public, false %>
              <%= f.label :is_public, "非公開", value: false, class: "m-0" %>
            </div>
          </div>
        </div>

        <div class="form-group row ml-3 my-4">
          <label class="col-md-3 col-form-label font-weight-bold pl-0">アクティブステータス</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-5  d-flex align-items-center">
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "有効", value: true, class: "my-0 mr-3" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "退会", value: false, class: "m-0" %>
            </div>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-9 form-row d-flex justify-content-center">
            <%= f.submit "変更を保存", class: "btn btn-success px-4" %>
          </div>
        </div>

    <% end %>
  </div>
</div>