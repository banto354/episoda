<div class="container my-4 px-sm-1">
  <div class="px-1">
    <h5 class="bg-light text-center ml-3 mb-4" style="width: 300px;"><%= @user.name %>さんの情報詳細</h5>
  </div>
   <div class="col-sm-12 col-md-9 col-lg-8 col-xl-7 px-sm-0 px-md-1">
    <table class="table table-hover table-borderless">
      <tr>
        <th>ユーザーID</th>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th>名前</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>ユーザーネーム</th>
        <td>@<%= @user.username %></td>
      </tr>
      <tr>
        <th>プロフィール</th>
        <td><%= @user.introduction %></td>
      </tr>
      <tr>
        <th>生年月日</th>
        <td><%= @user.birthdate.strftime("%Y/%m/%d") %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>公開ステータス</th>
        <% if @user.is_public == true %>
          <td class="text-success"><strong>公開</strong></td>
        <% else %>
          <td class="text-muted"><strong>非公開</strong></td>
        <% end %>
      </tr>
      <tr>
        <th>アクティブステータス</th>
        <% if @user.is_active == true %>
          <td class="text-success"><strong>有効</strong></td>
        <% else %>
          <td class="text-muted"><strong>退会</strong></td>
        <% end %>
      </tr>
      <th></th>
      <td>
        <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success btn-sm mr-2 mr-md-5 px-4" %>
        <%#= link_to "投稿一覧を見る", admin_user_episodes_path(@user), class: "btn btn-primary btn-sm px-2 mt-2 mt-sm-0"  %>
      </td>
    </table>
  </div>
</div>