
<div class="container my-2 px-md-0 text-nowrap">
  <%= form_with model: Admin.new, url: admin_session_path, class: "form-group" do |f| %>
  <div class="form-group row justify-content-center">
    <div class="col-md-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <div class="col-md-6">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control" %>
    </div>
  </div>

  <div class="actions text-center px-5">
    <div class=>
      <%= f.submit "ログイン", class: "btn btn-primary col-md-4 m-4 font-weight-bold" %>
    </div>
  </div>
  <% end %>
  </div>
