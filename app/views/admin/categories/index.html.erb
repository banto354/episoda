<div class="container">
  <div>
    <h5 class="bg-light text-center ml-5 mb-4">カテゴリー一覧・追加</h5>
  </div>
  <%= render 'layouts/error_messages', resource: @category %>
  <%= render 'form', category: @category %>

    <div class="ml-0 mt-4 px-0 col-8">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="bg-light col-3">カテゴリ名</th>
            <th class="bg-light col-3">親カテゴリ</th>
            <th class="bg-light col-3"></th>
            <th class="bg-light col-3"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= Category.varieties_i18n[category.variety] %></td>
              <td>
                <%= link_to '編集', edit_admin_category_path(category), class: 'btn btn-success px-3' %>
              </td>
              <td>
                <%= link_to '削除', admin_category_path(category), method: :delete, class: 'btn btn-danger px-3' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

